# exit
USER hmp
WORKDIR /home/hmp
RUN touch /home/hmp/.sudo_as_admin_successful
COPY ./bashrc_suffix /home/hmp/bashrc_suffix
RUN cat /home/hmp/bashrc_suffix >> /home/hmp/.bashrc

